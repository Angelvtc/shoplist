<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShopListViewModels"
             x:Class="shoptList.GUI.Views.ShoptListPage"
             xmlns:model="clr-namespace:shoptList.GUI.Models"    
             x:DataType="viewmodel:ShopListViewModels"
             Title="ShoptListPage">
    <Grid
        RowDefinitions="Auto,*"
        Padding="8"
        RowSpacing="6">
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            RowDefinitions="Auto,Auto"
            ColumnDefinitions="Auto,*,Auto,Auto"
            RowSpacing="4"
            ColumnSpacing="4">
           
            <Label
            Grid.Row="0"
            Grid.Column="0"
            VerticalOptions="Center"
            HorizontalOptions="End"
            FontSize="Medium"
            Text="Producto:"/>
           
            <Entry
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding NombreDelArticulo}"    
            TextColor="Black"
            FontSize="Medium"
            BackgroundColor="Beige"/>

            <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalOptions="Center"
            HorizontalOptions="End"
            FontSize="Medium"
            Text="Cantidad:"/>
           
            <Entry
            Grid.Row="1"
            Grid.Column="1"
            TextColor="Black"
            Text="{Binding CantidadAComprar}"
            FontSize="Medium"
            BackgroundColor="#f0f0f0"/>

            <Button
            Grid.Row="0"
            Grid.Column="2"
            FontSize="Medium"
            Text="+"
            Command="{Binding AgregarShopListItemCommand}"/>

            <Button
            Grid.Row="1"
            Grid.Column="2"
            FontSize="Medium"
                Command="{Binding EleminarShopListItemCommand}"
            Text="X" />
            
        </Grid>

        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedItem}"
            ItemsSource="{Binding item}"
            EmptyView="AÃºn no se han registrado productos"
            BackgroundColor="Beige">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Grid
                        BackgroundColor="Beige"
                        Padding="8,0"
                        ColumnDefinitions="Auto,*,Auto">
                        <CheckBox
                             IsChecked="{Binding Comprado}"/>
                        <Label
                            VerticalOptions="Center"
                            Grid.Column="1"
                            Text="{Binding Nombre}"/>
                        <Label
                            Grid.Column="2"
                            VerticalOptions="Center"
                            Text="{Binding Cantidad}"/>
                    </Grid>
                </Border>
            </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
    
</ContentPage>